{
  "name": "spendwise",
  "private": true,
  "scripts": {
    "b:in": "pnpm --filter backend install",
    "b:un": "pnpm --filter backend uninstall",
    "b:local": "pnpm --filter backend local",
    "b:build": "pnpm --filter backend build",
    "b:dev": "pnpm --filter backend dev",
    "b:format": "pnpm --filter backend format",
    "b:lint": "pnpm --filter backend lint",
    "b:migrate:create": "pnpm --filter backend migrate:create",
    "b:migrate:up": "pnpm --filter backend migrate:up",
    "b:migrate:down": "pnpm --filter backend migrate:down",
    "b:verify": "pnpm b:lint && pnpm b:format && pnpm b:build",
    "prepare": "husky"
  },
  "dependencies": {
    "husky": "^9.1.7"
  }
}
