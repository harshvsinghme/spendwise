{
  "name": "backend",
  "version": "1.0.0",
  "description": "",
  "main": "dist/server.js",
  "type": "module",
  "scripts": {
    "local": "NODE_ENV=local tsx watch src/server.ts",
    "build": "node ./node_modules/typescript/bin/tsc -p tsconfig.json",
    "prod": "NODE_ENV=prod node dist/server.js",
    "format": "prettier --write '**/*.{ts,json}' --config ./.prettierrc",
    "lint": "eslint . --fix",
    "migrate:create": "node-pg-migrate create --migrationsDir migrations",
    "migrate:up": "node-pg-migrate up --migrationsDir migrations",
    "migrate:down": "node-pg-migrate down --migrationsDir migrations",
    "verify": "pnpm lint && pnpm format && pnpm build"
  },
  "keywords": [],
  "author": "harshvsinghme",
  "license": "ISC",
  "packageManager": "pnpm@10.24.0",
  "dependencies": {
    "bcrypt": "^6.0.0",
    "cors": "^2.8.5",
    "dayjs": "^1.11.19",
    "express": "^5.2.1",
    "http-status-codes": "^2.3.0",
    "ioredis": "^5.8.2",
    "jsonwebtoken": "^9.0.3",
    "nodemailer": "^7.0.12",
    "pg": "^8.16.3",
    "pino": "^10.1.0",
    "pino-pretty": "^13.1.3",
    "pino-http": "^11.0.0",
    "zod": "^4.2.1",
    "zod-validation-error": "^5.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/bcrypt": "^6.0.0",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.6",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^25.0.2",
    "@types/nodemailer": "^7.0.4",
    "@types/pg": "^8.16.0",
    "eslint": "^9.39.2",
    "globals": "^16.5.0",
    "node-pg-migrate": "^8.0.4",
    "prettier": "^3.7.4",
    "prettier-plugin-organize-imports": "^4.3.0",
    "tsc": "^2.0.4",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.50.0"
  }
}
